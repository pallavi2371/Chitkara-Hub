</div>

</div>
<div class="container midarticle">
 <% articles.forEach(article => { %>
  <div class="row">
     <div class="card-body col-sm">
     <h2 class="card-title"> <%= article.title %> </h2>
     <div class="card-text mb-2"><h4><%= article.description %></h4></div>
     <div class="card-subtitle text-muted mb-2">
      <%= article.createdAt.toLocaleDateString() %>
      </div>
     <div class="buttons">
          <a href="articles/<%= article.slug %>" class="readmore">Read More</a>
          <a href="articles/edit/<%= article.id %>" class="edit">Edit</a>
          <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="delete"><i class="fas fa-trash"></i></button>
          </form>
        </div>
        </div>
        </div>
<% }) %>
     
