     <!-- articles  -->

<div style="height:30%;width:100%;" class="beech"><h1>ARTICLES</h1></div>

<div class="article">
<a href="/articles/new">
  <div class="col">
<div class="add card shadow-sm" >
<i class="fas fa-plus-circle fa-5x"></i></div></a>
<!-- <div class="card-body">
  <p>Submit your article</p>
  <div class="d-flex justify-content-between align-items-center">

